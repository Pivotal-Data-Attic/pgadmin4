{
  "name": "pgAdmin4",
  "version": "3.0.0",
  "description": "pgAdmin4 application",
  "homepage": "https://www.pgadmin.org",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "dist": "./node_modules/.bin/electron-builder",
    "clean": "rimraf pgadmin4 dist pgAdmin4-*",
    "bundle-app-js": "cd pgadmin4 && rimraf node_modules && yarn install && yarn bundle && rimraf node_modules pgadmin/static/js/generated/.cache",
    "build:windows": "yarn copy-folder:windows && yarn copy-config:windows && yarn bundle-app-js",
    "build:nix": "yarn copy-folder:nix && yarn copy-config:nix && yarn bundle-app-js",
    "copy-folder:nix": "cp -r ../web pgadmin4 && find pgadmin4 | grep .pyc$ | xargs -I '{}' rm '{}'",
    "copy-config:nix": "cp config_local.py pgadmin4",
    "copy-folder:windows": "copy -r ../web pgadmin4 && find pgadmin4 | grep .pyc$ | xargs -I '{}' rm '{}'",
    "copy-config:windows": "copy config_local.py pgadmin4",
    "build1": "./node_modules/.bin/electron-packager . --overwrite --ignore=\".*\\.zip\" --ignore=\".*\\.log\" --icon=assets/icons/mac/logo-256.png.icns --package-manager=yarn"
  },
  "repository": "https://github.com/postgres/pgadmin4/",
  "keywords": [
    "Postgres",
    "PGAdmin4",
    "PGAdmin"
  ],
  "author": "pgAdmin4 <pgadmin-support@pgadmin.org> (https://www.pgadmin.org)",
  "license": "PostgreSQL",
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^20.0.7",
    "electron-packager": "^11.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "dragula": "^3.7.2",
    "electron-debug": "^1.5.0",
    "electron-tabs": "^0.9.0",
    "wait-on": "^2.1.0"
  },
  "files": [
    "app/**",
    "pgadmin4/**",
    "venv/**",
    "build/icon.*",
    "assets/**"
  ],
  "build": {
    "appId": "org.pgadmin",
    "productName": "pgAdmin 4",
    "copyright": "Copyright (C) 2013 - 2018, The pgAdmin Development Team",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/mac/pgAdmin4.icns",
      "asar": false,
      "compression": "maximum"
    },
    "win": {
      "icon": "assets/icons/win/pgAdmin4.ico",
      "asar": false
    },
    "linux": {
      "icon": "assets/icons/png/pgAdmin4.png",
      "asar": false,
      "target": {
        "target": "rpm",
        "arch": "x64"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/win/pgAdmin4.ico"
    }
  }
}
